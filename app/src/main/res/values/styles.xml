<resources>

    <style name="CustomTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/md_green_400</item>
        <!--<item name="android:fontFamily">sans-serif-light</item>-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="actionbar_home_mainactivity" parent="@style/CustomTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="MaterialLoginTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    </style>

    <style name="MaterialLoginTheme.SelectableItemTheme">
        <item name="colorControlHighlight">@color/white</item>
    </style>
    <style name="MaterialLoginTheme.SelectableItemBackground">
        <item name="android:theme">@style/MaterialLoginTheme.SelectableItemTheme</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>

    <!--<style name="MaterialLoginTheme.TextAppearanceRegister">-->
    <!--<item name="android:textColor">@color/material_login_login_color</item>-->
    <!--<item name="colorControlNormal">@color/material_login_login_color</item>-->
    <!--<item name="android:textColorHint">@color/material_login_login_color</item>-->
    <!--<item name="colorControlActivated">@color/material_login_login_color</item>-->
    <!--<item name="colorControlHighlight">@color/material_login_login_color</item>-->
    <!--</style>-->

    <style name="MaterialLoginTheme.TextAppearanceLogin">
        <item name="android:textColor">@color/color_light_blue</item>
        <item name="colorControlNormal">@color/color_light_blue</item>
        <item name="android:textColorHint">@color/color_light_blue</item>
        <item name="colorControlActivated">@color/color_light_blue</item>
        <item name="colorControlHighlight">@color/color_light_blue</item>
    </style>

    <style name="MaterialLoginTheme.TextAppearanceForm">
        <item name="android:textColor">@color/color_dark_blue</item>
        <item name="colorControlNormal">@color/color_dark_blue</item>
        <item name="android:textColorHint">@color/color_dark_blue</item>
        <item name="colorControlActivated">@color/color_dark_blue</item>
        <item name="colorControlHighlight">@color/color_dark_blue</item>
    </style>

    <style name="MaterialLoginTheme.TextAppearanceLoginError" parent="android:Widget.TextView">
        <item name="android:textColor">@color/material_login_login_error_color</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="MaterialLoginTheme.TextAppearanceRegisterError" parent="android:Widget.TextView">
        <item name="android:textColor">@color/material_login_login_error_color</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="floating_action_button">
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginRight">32dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:hint">@color/material_login_login_error_color</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="CameraTheme" parent="@android:style/Theme.NoTitleBar.Fullscreen">
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
</resources>
